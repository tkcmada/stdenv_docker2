{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-05964063",
    "instance_type": "t1.micro",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/xvda",
        "volume_size": 20
      }
    ],
    "ami_name": "stdenv-docker-registry-{{isotime | clean_ami_name}}",
    "ami_groups": "all"
  }],
 "provisioners": [
   {
    "type": "shell",
    "inline": [
      "sudo yum install -y docker git",
      "sudo usermod -g docker ec2-user",
      "sudo service docker start",
      "sh -c 'sleep 10'",
      "sudo docker info",
      "cd /home/ec2-user",
      "sudo docker pull registry",
      "sudo docker run -d -v /opt/registry:/var/lib/registry -p 5000:5000 registry",
      "git clone https://github.com/tkcmada/stdenv_docker2.git",
      "cd stdenv_docker2",
      "sudo sh build_tag_push.sh stdenv_alpine",
      "sudo sh build_tag_push.sh stdenv_tools",
      "sudo sh build_tag_push.sh stdenv_tools_java",
      "sudo sh build_tag_push.sh hadoop",
      "sudo sh build_tag_push.sh kubernetes",
      "sudo sh build_tag_push.sh sample_node"
     ]
   }
   ,
   {
    "type": "file",
    "source": "daemon.json",
    "destination": "~/daemon.json"
   }
   ,
   {
    "type": "shell",
    "inline": [
       "sudo mkdir -p /etc/docker"
      ,"sudo cp -p ~/daemon.json /etc/docker/daemon.json"
     ]
   }
  ]
}
