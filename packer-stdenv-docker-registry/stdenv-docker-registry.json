{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-05964063",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/xvda",
        "volume_size": 20
      }
    ],
    "ami_name": "stdenv-sample-{{isotime | clean_ami_name}}",
    "ami_groups": "all"
  }],
 "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo yum install -y docker git",
      "sudo usermod -g docker ec2-user",
      "sudo service docker start",
      "sh -c 'sleep 10'",
      "sudo docker info",
      "cd /home/ec2-user",
      "sudo docker pull registry",
      "sudo docker run -d -p 5000:5000 registry",
      "git clone https://github.com/tkcmada/stdenv_docker.git",
      "cd stdenv_docker/stdenv_tools",
      "sudo docker build -t stdenv_tools .",
      "sudo docker tag stdenv_tools localhost:5000/stdenv_tools",
      "sudo docker push localhost:5000/stdenv_tools"
    ]
  }]
}
